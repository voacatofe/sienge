# Configurações do Banco de Dados PostgreSQL
POSTGRES_DB=sienge_data
POSTGRES_USER=sienge_app
POSTGRES_PASSWORD=your-secret-postgres-password-here
POSTGRES_HOST=db
POSTGRES_PORT=5432
POSTGRES_CONFIG_EXTRA=listen_addresses='*'
POSTGRES_HOST_AUTH_METHOD=md5
POSTGRES_INITDB_ARGS=--auth-host=md5

NEXT_PUBLIC_PRIMARY_DOMAIN=https://$(PRIMARY_DOMAIN)
NEXT_PUBLIC_DB_PORT_EXTERNAL=${POSTGRES_PORT}
NEXT_PUBLIC_POSTGRES_DB=${POSTGRES_DB}
NEXT_PUBLIC_POSTGRES_USER=${POSTGRES_USER}

# URL de Conexão do Prisma (para produção com pgBouncer)
DATABASE_URL="postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}?schema=public"

# Configurações da Aplicação
NEXT_PUBLIC_APP_URL=https://$(PRIMARY_DOMAIN)
NEXTAUTH_SECRET=your-secret-nextauth-secret-here
NEXTAUTH_URL=https://$(PRIMARY_DOMAIN)

# Configurações de Portas
APP_PORT_EXTERNAL=3002
DB_PORT_EXTERNAL=5434

# URL Externa da Base de Dados (para ferramentas BI)
# Esta URL será construída dinamicamente baseada nas variáveis acima
# Formato: postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@localhost:${DB_PORT_EXTERNAL}/${POSTGRES_DB}

# Configurações de Sincronização
SYNC_SCHEDULE=0 2 * * *
SYNC_BATCH_SIZE=200
SYNC_MAX_RETRIES=3

# Configurações de Log
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Configurações de Segurança
BCRYPT_ROUNDS=12
JWT_SECRET=your-jwt-secret-here

# Configurações do Looker Studio Connector
NEXT_PUBLIC_LOOKER_DEPLOYMENT_ID=your-looker-studio-deployment-id-here

# ===========================================
# CONFIGURAÇÕES DO ADMINER (PRODUÇÃO)
# ===========================================
ADMINER_MEMORY_LIMIT=512M
ADMINER_CPU_LIMIT=1.0
ADMINER_MEMORY_RESERVATION=256M
ADMINER_CPU_RESERVATION=0.5
ADMINER_PORT_EXTERNAL=8080

# Acesso ao Adminer Web - Produção:
# URL: http://localhost:8080
# Sistema: PostgreSQL
# Servidor: db (ou localhost se acessando externamente)
# Usuário: ${POSTGRES_USER}
# Senha: ${POSTGRES_PASSWORD}
# Base de dados: ${POSTGRES_DB}

ENCRYPTION_KEY=dev-encryption-key-32-characters-!!
