# Configurações da API Sienge
SIENGE_SUBDOMAIN=seu-subdominio
SIENGE_USERNAME=seu-usuario-api
SIENGE_PASSWORD=sua-senha-api

# Configurações do Banco de Dados PostgreSQL
POSTGRES_DB=sienge_data
POSTGRES_USER=sienge_app
POSTGRES_PASSWORD=senha_forte
POSTGRES_HOST=db
POSTGRES_PORT=5432

# Configurações da Aplicação
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXTAUTH_SECRET=seu-secret-super-seguro-aqui
NEXTAUTH_URL=http://localhost:3000

# Configurações de Portas
APP_PORT_EXTERNAL=3000    # Porta externa da aplicação Next.js
APP_PORT_INTERNAL=3000    # Porta interna da aplicação Next.js
DB_PORT_EXTERNAL=5432     # Porta externa do PostgreSQL
DB_PORT_INTERNAL=5432     # Porta interna do PostgreSQL

# URL Externa da Base de Dados (para ferramentas BI)
# Esta URL será construída dinamicamente baseada nas variáveis acima
# Formato: postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@localhost:${DB_PORT_EXTERNAL}/${POSTGRES_DB}

# Configurações de Sincronização
SYNC_SCHEDULE=0 2 * * *
SYNC_BATCH_SIZE=200
SYNC_MAX_RETRIES=3

# Configurações de Log
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Configurações de Segurança
BCRYPT_ROUNDS=12
JWT_SECRET=seu-jwt-secret-aqui