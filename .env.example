# ===========================================
# CONFIGURAÇÕES DO BANCO DE DADOS
# ===========================================

# Configurações do PostgreSQL
POSTGRES_DB=sienge_dev
POSTGRES_USER=sienge_dev
POSTGRES_PASSWORD=dev_password
POSTGRES_HOST=db
POSTGRES_PORT=5432

# Portas externas para acesso
DB_PORT_EXTERNAL=5432
DB_PORT_INTERNAL=5432
APP_PORT_EXTERNAL=3000
APP_PORT_INTERNAL=3000

# ===========================================
# CONFIGURAÇÕES DO PGADMIN
# ===========================================

# Credenciais de acesso ao pgAdmin
PGADMIN_EMAIL=admin@sienge.local
PGADMIN_PASSWORD=admin123

# Porta do pgAdmin (desenvolvimento)
PGADMIN_PORT_EXTERNAL=8080

# ===========================================
# CONFIGURAÇÕES DA APLICAÇÃO
# ===========================================

# URL pública da aplicação
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Configurações da API Sienge
SIENGE_SUBDOMAIN=seu_subdominio
SIENGE_USERNAME=seu_usuario
SIENGE_PASSWORD=sua_senha

# ===========================================
# CONFIGURAÇÕES DE SINCRONIZAÇÃO
# ===========================================

# Agendamento da sincronização (cron format)
SYNC_SCHEDULE=0 2 * * *

# Configurações de batch
SYNC_BATCH_SIZE=50
SYNC_MAX_RETRIES=3

# ===========================================
# CONFIGURAÇÕES DE PRODUÇÃO
# ===========================================
# Para produção, use valores mais seguros:
# POSTGRES_PASSWORD=senha_muito_forte_e_complexa
# PGADMIN_PASSWORD=senha_muito_forte_pgadmin
# PGADMIN_PORT_EXTERNAL=8080