# ===========================================
# AMBIENTE DOCKER
# ===========================================
NODE_ENV=development

# ===========================================
# API SIENGE
# ===========================================
SIENGE_SUBDOMAIN=demo
SIENGE_USERNAME=demo_user
SIENGE_PASSWORD=demo_password

# ===========================================
# BANCO DE DADOS (DOCKER)
# ===========================================
POSTGRES_DB=sienge_dev
POSTGRES_USER=sienge_app
POSTGRES_PASSWORD=senha_forte
POSTGRES_HOST=db  # Nome do serviço no Docker
POSTGRES_PORT=5432

# Conexão dinâmica para ambiente Docker
DATABASE_URL="postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}?schema=public"

# ===========================================
# APLICAÇÃO
# ===========================================
NEXT_PUBLIC_APP_URL=${NEXT_PUBLIC_APP_URL:-http://localhost:3000}
NEXTAUTH_URL=${NEXTAUTH_URL:-http://localhost:3000}
NEXTAUTH_SECRET=dev-secret-key-not-for-production

# ===========================================
# CONFIGURAÇÕES DE SISTEMA
# ===========================================
SYNC_BATCH_SIZE=50
SYNC_MAX_RETRIES=3
LOG_LEVEL=debug
ENCRYPTION_KEY=dev-encryption-key-32-characters-!!
JWT_SECRET=dev-jwt-secret-not-for-production
RATE_LIMIT_CREDENTIALS_MAX=10
RATE_LIMIT_CREDENTIALS_WINDOW=300000
DATABASE_CONNECTION_LIMIT=10

