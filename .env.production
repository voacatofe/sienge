# ===================================
# AMBIENTE DE PRODUÇÃO
# ===================================

# Banco de Dados PostgreSQL (Produção)
POSTGRES_DB=sienge_data
POSTGRES_USER=sienge_app
POSTGRES_PASSWORD=secure_production_password_123_CHANGE_THIS
POSTGRES_HOST=db
POSTGRES_PORT=5432

# URL de Conexão do Prisma (Produção)
DATABASE_URL="postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}?schema=public"

# Configurações da Aplicação (Produção)
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://your-domain.com
NEXTAUTH_SECRET=production-nextauth-secret-key-CHANGE-THIS-TO-RANDOM-STRING
NEXTAUTH_URL=https://your-domain.com

# Portas Externas (Produção)
APP_PORT_EXTERNAL=3000
DB_PORT_EXTERNAL=5432
ADMINER_PORT_EXTERNAL=8080

# Configurações Sienge (Produção)
SIENGE_SUBDOMAIN=your-subdomain
SIENGE_USERNAME=your-username
SIENGE_PASSWORD=your-password

# Configurações de Sincronização (Produção)
SYNC_SCHEDULE=0 2 * * *
SYNC_BATCH_SIZE=200
SYNC_MAX_RETRIES=3

# Configurações de Log (Produção)
LOG_LEVEL=info
LOG_FILE=logs/production.log

# Configurações de Segurança (Produção)
BCRYPT_ROUNDS=12
JWT_SECRET=production-jwt-secret-key-CHANGE-THIS
ENCRYPTION_KEY=production-encryption-key-32-chars!!

# Limites de Recursos (Produção)
DB_MEMORY_LIMIT=2G
DB_CPU_LIMIT=2.0
APP_MEMORY_LIMIT=4G
APP_CPU_LIMIT=4.0
ADMINER_MEMORY_LIMIT=512M
ADMINER_CPU_LIMIT=1.0

# Reservas de Recursos (Produção)
DB_MEMORY_RESERVATION=1G
DB_CPU_RESERVATION=1.0
APP_MEMORY_RESERVATION=2G
APP_CPU_RESERVATION=2.0
ADMINER_MEMORY_RESERVATION=256M
ADMINER_CPU_RESERVATION=0.5